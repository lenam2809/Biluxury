@model IEnumerable<BILUXURY.Models.FEEDBACK>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Quản lý các phản hồi từ khách hàng</h2>


<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <tr>
        <th scope="col">
            Feedback ID
        </th>
        <th scope="col">
            Nội dung
        </th>
        <th scope="col">
            Ngày tạo
        </th>
        <th scope="col">
            Mã khách hàng
        </th>
        <th scope="col"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                @Html.DisplayFor(modelItem => item.ID)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                <div style="display: flex;">
                    <button type="button" title="Details" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Feedback", new { id = item.ID })'"><i class="fa fa-info-circle"></i></button>&nbsp;               
                </div>
            </td>
        </tr>
    }

</table>
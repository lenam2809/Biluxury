@model IEnumerable<BILUXURY.Models.NhapHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Index</h2>

<button type="button" title="Create" class="btn btn-info" style="margin-top: 15px;" value="Create" onclick="location.href='@Url.Action("Create", "QLNhapHang")'"><i class="fas fa-plus-circle"></i> Thêm mới</button>

<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px">
    <tr>
        <th>
            Sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Ngày nhập
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhap)
            </td>
        </tr>
    }

</table>


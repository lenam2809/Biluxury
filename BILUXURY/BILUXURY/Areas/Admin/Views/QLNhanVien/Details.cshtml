@model BILUXURY.Models.NHANVIEN

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Chi tiết nhân viên có mã là @Html.DisplayFor(model => model.MaNV)</h2>

<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <thead>
        <tr>
            <th scope="col">Tên nhân viên</th>
            <th scope="col">Ngày sinh</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Giới tính</th>
            <th scope="col">Ghi chú</th>
            <th scope="col">Account</th>
            <th scope="col">Password</th>
            <th scope="col">IsActive</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Html.DisplayFor(model => model.TenNV)</th>
            <td>@Html.DisplayFor(model => model.NgaySinh)</td>
            <td>@Html.DisplayFor(model => model.DiaChi)</td>
            <td>@Html.DisplayFor(model => model.GioiTinh)</td>
            <td>@Html.DisplayFor(model => model.GhiChu)</td>
            <td>@Html.DisplayFor(model => model.Account)</td>
            <td>@Html.DisplayFor(model => model.Password)</td>
            <td>@Html.DisplayFor(model => model.IsActive)</td>
            <td>
                <button type="button" title="edit" class="btn btn-info" onclick="location.href='@Url.Action("Edit", "QLNhanVien", new { id = Model.MaNV })'"><i class="fas fa-Edit"></i> Edit</button>
            </td>
        </tr>
    </tbody>
</table>


<div>
    <button type="button" title="back" class="btn btn-warning" style="margin-top: 15px;" onclick="location.href='@Url.Action("Index", "QLNhanVien")'"><i class="fas fa-backward"></i> Trở về</button>
</div>



@model IEnumerable<BILUXURY.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Quản lý Nhân viên</h2>

<button type="button" title="Create" class="btn btn-info" style="margin-top: 15px;" value="Create" onclick="location.href='@Url.Action("Create", "QLNhanVien")'"><i class="fas fa-plus-circle"></i> Thêm nhân viên</button>

<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <tr>
        <th>
            Tên nhân viên
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Account
        </th>
        <th>
            Password
        </th>
        <th>
            IsActive
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <div style="display: flex;">
                    <button type="button" title="Details" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "QLNhanVien", new { id = item.MaNV })'"><i class="fa fa-info-circle"></i></button>&nbsp;
                    <button type="button" title="Edit" class="btn btn-success" onclick="location.href='@Url.Action("Edit", "QLNhanVien", new { id = item.MaNV })'"><i class="fas fa-edit"></i></button>&nbsp;
                    <button type="button" title="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "QLNhanVien", new { id = item.MaNV })'"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    }

</table>

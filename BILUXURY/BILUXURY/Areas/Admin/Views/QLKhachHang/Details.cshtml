@model BILUXURY.Models.KHACHHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Chi tiết khách hàng có mã là @Html.DisplayFor(model => model.MaKH)</h2>

<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <thead>
        <tr>
            <th scope="col">Tên khách hàng</th>
            <th scope="col">Ngày sinh</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Giới tính</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Html.DisplayFor(model => model.TenKH)</th>
            <td>@Html.DisplayFor(model => model.NgaySinh)</td>
            <td>@Html.DisplayFor(model => model.DiaChi)</td>
            <td>@Html.DisplayFor(model => model.GioiTinh)</td>
            <td>@Html.DisplayFor(model => model.Email)</td>
            <td>@Html.DisplayFor(model => model.Phone)</td>
            <td>
                <button type="button" title="edit" class="btn btn-info" onclick="location.href='@Url.Action("Edit", "QLKhachHang", new { id = Model.MaKH })'"><i class="fas fa-Edit"></i> Edit</button>
            </td>
        </tr>
    </tbody>
</table>


<div>
    <button type="button" title="back" class="btn btn-warning" style="margin-top: 15px;" onclick="location.href='@Url.Action("Index", "QLKhachHang")'"><i class="fas fa-backward"></i> Trở về</button>
</div>

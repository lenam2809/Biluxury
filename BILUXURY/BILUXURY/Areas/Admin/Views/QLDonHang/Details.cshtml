@model IEnumerable<BILUXURY.Models.CHITIETDONHANG>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Chi tiết đơn hàng có mã @ViewBag.MaDH</h2>

<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <tr>
        <th>
            Mã chi tiết đơn hàng
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Notes
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
        </tr>
    }

</table>

<div>
    <button type="button" title="back" class="btn btn-warning" style="margin-top: 15px;" onclick="location.href='@Url.Action("Index", "QLDonHang")'"><i class="fas fa-backward"></i> Trở về</button>
</div>

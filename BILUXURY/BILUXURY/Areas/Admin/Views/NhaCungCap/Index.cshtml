@model IEnumerable<BILUXURY.Models.NHACUNGCAP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Quản lý nhà cung cấp</h2>

<button type="button" title="Create" class="btn btn-info" style="margin-top: 15px;" value="Create" onclick="location.href='@Url.Action("Create", "NhaCungCap")'"><i class="fas fa-plus-circle"></i> Thêm nhà cung cấp</button>


<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <tr>
        <th scope="col">
            Mã nhà cung cấp
        </th>
        <th scope="col">
            Tên nhà cung cấp
        </th>
        <th scope="col">
            Địa chỉ
        </th>
        <th scope="col">
            Phone
        </th>
        <th scope="col"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                @Html.DisplayFor(modelItem => item.MaNCC)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <div style="display: flex;">
                    <button type="button" title="Edit" class="btn btn-success" onclick="location.href='@Url.Action("Edit", "NhaCungCap", new { id = item.MaNCC })'"><i class="fas fa-edit"></i></button>&nbsp;
                    <button type="button" title="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "NhaCungCap", new { id = item.MaNCC })'"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    }

</table>

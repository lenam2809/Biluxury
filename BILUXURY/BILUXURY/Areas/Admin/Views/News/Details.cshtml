@model BILUXURY.Models.NEW

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Chi tiết News</h2>
<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <thead>
        <tr>
            <th scope="col">Tiêu đề</th>
            <th scope="col">Link ảnh</th>
            <th scope="col">Nội dung</th>
            <th scope="col">Ngày tạo</th>
            <th scope="col">Người tạo</th>
            <th scope="col">ViewCount</th>
            <th scope="col">Mã Loại sản phẩm</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Html.DisplayFor(model => model.TieuDe)</th>
            <td>@Html.DisplayFor(model => model.LinkAnh)</td>
            <td>@Html.DisplayFor(model => model.NoiDung)</td>
            <td>@Html.DisplayFor(model => model.NgayTao)</td>
            <td>@Html.DisplayFor(model => model.NguoiTao)</td>
            <td>@Html.DisplayFor(model => model.ViewCount)</td>
            <td>@Html.DisplayFor(model => model.MaLSP)</td>
            <td>
                <button type="button" title="edit" class="btn btn-info" onclick="location.href='@Url.Action("Edit", "News", new { id = Model.ID })'"><i class="fas fa-Edit"></i> Edit</button>
            </td>
        </tr>
    </tbody>
</table>


<div>
    <button type="button" title="back" class="btn btn-warning" style="margin-top: 15px;" onclick="location.href='@Url.Action("Index", "News")'"><i class="fas fa-backward"></i> Trở về</button>
</div>

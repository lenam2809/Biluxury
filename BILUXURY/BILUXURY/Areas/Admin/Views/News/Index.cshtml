@model IEnumerable<BILUXURY.Models.NEW>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Quản lý bài viết</h2>

<button type="button" title="Create" class="btn btn-info" style="margin-top: 15px;" value="Create" onclick="location.href='@Url.Action("Create", "News")'"><i class="fas fa-plus-circle"></i> Thêm bài viết</button>

<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <tr>
        <th>
            Title
        </th>
        <th>
            NewImage
        </th>
        <th>
            Nội dung
        </th>
        <th>
            Người tạo
        </th>
        <th>
            ViewCount
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                <div style="display: flex;">
                    <button type="button" title="Details" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "News", new { id = item.NewID })'"><i class="fa fa-info-circle"></i></button>&nbsp;
                    <button type="button" title="Edit" class="btn btn-success" onclick="location.href='@Url.Action("Edit", "News", new { id = item.NewID })'"><i class="fas fa-edit"></i></button>&nbsp;
                    <button type="button" title="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "News", new { id = item.NewID })'"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    }

</table>

@model IEnumerable<BILUXURY.Models.LOAISANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LoyoutAdmin.cshtml";
}

<h2>Quản lý loại sản phẩm</h2>

<button type="button" title="Create" class="btn btn-info" style="margin-top: 15px;" value="Create" onclick="location.href='@Url.Action("Create", "LoaiSP")'"><i class="fas fa-plus-circle"></i> Thêm loại sản phẩm</button>

<table class="table table-striped table-hover" style="border: 1px solid black; margin-top: 15px;">
    <tr>
        <th>
            Mã loại sản phẩm
        </th>
        <th>
            Tên loại sản phẩm
        </th>
        <th>
            Miêu tả
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MieuTa)
            </td>
            <td>
                <div style="display: flex;">
                    <button type="button" title="Edit" class="btn btn-success" onclick="location.href='@Url.Action("Edit", "LoaiSP", new { id = item.MaLoaiSP })'"><i class="fas fa-edit"></i></button>&nbsp;
                    <button type="button" title="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "LoaiSP", new { id = item.MaLoaiSP     })'"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    }

</table>

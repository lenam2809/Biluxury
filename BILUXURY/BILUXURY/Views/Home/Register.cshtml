
@{
    ViewBag.Title = "Register";
    Layout = null;
}




@Styles.Render("~/Asset/CSS/Register.css")


<div class="container">
    <header>Tạo tài khoản</header>
    <div class="progress-bar">
        <div class="step">
            <p>
                Tên
            </p>
            <div class="bullet">
                <span>1</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
        <div class="step">
            <p>
                Liên hệ
            </p>
            <div class="bullet">
                <span>2</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
        <div class="step">
            <p>
                Ngày sinh
            </p>
            <div class="bullet">
                <span>3</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
        <div class="step">
            <p>
                Xác nhận
            </p>
            <div class="bullet">
                <span>4</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
    </div>
    <div class="form-outer">
        <form name="myForm" action="/Home/Register" method="post">
            <div class="page slide-page">
                <div class="title">
                    Thông tin cơ bản:
                </div>
                <div class="field">
                    <div class="label">
                        Họ và tên
                    </div>
                    <input type="text" name="name" value="">
                    <p id="validate-name" class="form-text">
                    </p>
                </div>
                <div class="field">
                    <button class="firstNext next">Tiếp</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Thông tin liên hệ:
                </div>
                <div class="field">
                    <div class="label">
                        Địa chỉ
                    </div>
                    <input type="text" name="diachi">
                    <p id="validate-diachi" class="form-text">
                    </p>
                </div>
                <div class="field">
                    <div class="label">
                        Phone
                    </div>
                    <input type="Number" name="phone">
                    <p id="validate-phone" class="form-text">
                    </p>
                </div>
                <div class="field btns">
                    <button class="prev-1 prev">Quay lại</button>
                    <button class="next-1 next">Tiếp</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Ngày sinh:
                </div>
                <div class="field">
                    <div class="label">
                        Ngày sinh
                    </div>
                    <input type="date" name="ngaysinh" value="2020-01-01">
                    <p id="validate-date" class="form-text">
                    </p>
                </div>
                <div class="field">
                    <div class="label">
                        Giới tính
                    </div>
                    <select name="gioitinh">
                        <option value="Nam" selected>Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                </div>
                <div class="field btns">
                    <button class="prev-2 prev">Quay lại</button>
                    <button class="next-2 next">Tiếp</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Tài khoản:
                </div>
                <div class="field">
                    <div class="label">
                        Email
                    </div>
                    <input type="text" name="email" required>
                    <p id="validate-email" class="form-text" >
                    </p>
                </div>
                <div class="field">
                    <div class="label">
                        Mật khẩu
                    </div>
                    <input type="password" name="pass" required>
                    <p id="validate-pass" class="form-text">
                    </p>
                </div>
                <div class="field btns">
                    <button class="prev-3 prev">Quay lại</button>
                    <button class="submit">Đăng ký</button>
                </div>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/Asset/Javascript/script.js")






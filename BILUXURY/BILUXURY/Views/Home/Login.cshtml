
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p style="color: red; text-align: center;">@ViewBag.error</p>
<div class="container" style="padding-top: 50px;">
    <div class="row">
        <div class="col">
            <h1 class="text-center">ĐĂNG NHẬP </h1>
            <br>
            <form class="text-center" action="/Home/Login" returnUrl="@Request.QueryString["ReturnUrl"]" onsubmit="return  validateForm()" method="post" style="margin: 0 auto; width: 400px;">
                <div class="form-group">
                    <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                </div>
                <br>
                <div class="form-group">
                    <input type="password" class="form-control" name="pass" placeholder="Mật khẩu" required>
                </div>
                <br>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark">ĐĂNG NHẬP</button>
                </div>
                <div>
                    <a class="list-group-item list-group-item-action border-white" href="/">Trở về</a>
                </div>
                <div>
                    <a class="list-group-item list-group-item-action border-white" href="/Home/Register?">Đăng kí</a>
                </div>
                <div>
                    <a class="list-group-item list-group-item-action border-white" href="#">Quên mật khẩu</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function validateForm() {
            var a = document.forms["myForm"];

            //validate account
            if (a["user"].value == "") {
                document.getElementById("validate-account").innerHTML = "The account should not be blank.";
                return false;
            }

            //validate password
            if (a["password"].value == "") {
                document.getElementById("validate-password").innerHTML = "The password should not be blank.";
                return false;
            }
        }
    </script>
}


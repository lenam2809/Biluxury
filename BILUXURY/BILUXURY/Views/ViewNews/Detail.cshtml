
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dsnews = ViewBag.dsnews;
}

<div class="container-fluid">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.title</li>
        </ol>
    </nav>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9">
            <div class="shadow p-3 mb-5 bg-body rounded">
                <h1>@ViewBag.title</h1>
                <p class="card-text"><small class="text-muted"><i class="fas fa-user"></i>  Người tạo: @ViewBag.created</small></p>
                <p>@ViewBag.content</p>
                <img class="img-thumbnail text-center" style="text-align: center;" src="@ViewBag.image">
            </div>
        </div>
        <div class="col-md-3">
            <div class="">
                <h3>Bài viết gần đây</h3>
            </div>
            @foreach (var item in dsnews)
            {
                <div class="card mb-3 my-2" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <img src="@item.NewImage" class="img-thumbnail" alt="...">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-title fw-bold" style="font-size: small;">@item.Title</p>
                                <p><small class="text-muted"><i class="fas fa-user"></i>  @item.CreatedBy</small></p>
                                <button class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Detail", "ViewNews", new { id = item.NewID })'"><i class="fas fa-arrow-right"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

